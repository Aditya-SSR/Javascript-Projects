<body>
    <h2 id="h2">Can you <span class="pink">guess</span> the <span class="pink">number?</span></h2>
    <div class="box">
        <h4>Enter your guess:</h4>
        <input type="text" class="guess">
        <div class="btn">
            <button type="submit" id="b1">Submit</button>
            <button type="submit" id="b2">Play again</button>
        </div>
    </div>
    <h3 class="textmsg"></h3>
    <h3 class="textmsg1"></h3>

    <script>
let guess = document.querySelector(`.guess`);
const submit = document.querySelector(`#b1`);
const play = document.querySelector(`#b2`);
let message = document.querySelector(`.textmsg`);
let message1 = document.querySelector(`.textmsg1`);
let attempts = 0;
let gameover = false;

let comp = Math.floor((Math.random() * 10)) + 1;
message.innerHTML = `Guess the <span class="pink">value</span>(1-10)`;
submit.onclick = function() {    
    if(gameover) return;
    const user = guess.value;
    let num = Number(user);
    if(user == "" || isNaN(num) || num < 1 || num > 10){
        message.innerHTML = `Bruhh enter a <span class="pink">valid value!!</span> (1-10)`;
        guess.value = "";
    }
    else{
        attempts++;
        guess.value = "";
        if(user < comp){
            message.innerHTML = `Too <span class="pink">LOW!!</span>`;
        }
        else if(user > comp){
            message.innerHTML = `Too <span class="pink">HIGH!!</span>`;
        }
        else{
            message.innerHTML = `<span class="pink">CORRECT!!</span> The computer thought of <span class="pink">${comp}.</span>`;
            message1.innerHTML = `You have guessed the number in <span class="pink"> ${attempts} attempts</span> `;
            gameover = true;
        }
        
    }

}

play.onclick = function() {
    comp = Math.floor((Math.random() * 10)) + 1;
    guess.value = "";
    attempts = 0;
    gameover = false;
    message.innerHTML = `Guess the <span class="pink">value</span>(1-10)`;
    message1.innerHTML = "";
}

guess.addEventListener('keypress', function(event) {
    if(event.key === 'Enter'){
        event.preventDefault();
        submit.click();
    }
});
    </script>
</body>
</html>
