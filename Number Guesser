    margin-top: 7rem;
    font-family: Arial, Helvetica, sans-serif;
    font-weight: 300;
}

.box{
    margin-top: 2rem;
    background-color: rgb(253, 220, 226);
    display: flex;
    flex-direction: column;
    padding: 1rem;
    border-radius: 11px;
    row-gap: 0.5rem;
}

.box h4{
    font-family: Arial, Helvetica, sans-serif;
    font-weight: 250;
}
.box input{
    border: none;
    border-radius: 3px;
    padding: 0.5rem;
    color: black;
}

input:focus{
    outline: none;
}

.btn{
    display: flex;
    justify-content: space-between;
}

.btn button{
    padding: 5px;
    background-color: white;
    
    border: 0.3px solid black;
    border-radius: 5px;
}

.btn button:hover{
    background-color: #FF6B9D;
    color: white;
    transition: 0.3s ease;
    box-shadow: 2px 2px 10px #FF6B9D;
    border: none;
}

.textmsg {
    margin-top: 1rem;
    font-weight: 300;
    font-family: Arial, Helvetica, sans-serif;
}

.textmsg1{
    margin-top: 0.5rem;
    font-weight: 300;
    font-family: Arial, Helvetica, sans-serif;
}

.pink{
    color: #FF6B9D;
}
