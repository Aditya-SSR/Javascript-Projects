    box-sizing: border-box;
    font-family: Arial, Helvetica, sans-serif;
}

body{
    display: flex;
    height: 100vh;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: rgb(240, 238, 238);
}

.box{
    border-radius: 10px;
    box-shadow: 0px 0px 2px black;
    padding: 20px;
    background-color: beige;   
}

#tofare{
    margin-bottom: 0.5rem;
}

#h3{
    margin-bottom: 1rem;
    font-weight: 300;
}

#txt{
    margin-bottom: 1rem;
    padding: 0.4rem;
    margin-left: 0.2rem;
}

#txt:focus{
    outline: none;
}

#convert{
    margin: 0.9rem 4rem;
    padding: 0.4rem;
    border: 1px solid rgb(255, 210, 143);
    border-radius: 10px;
    background-color: rgb(255, 208, 137);
}

#convert:hover{
    background-color: rgb(255, 184, 77);
    transition: 0.3s ease;
}

#value{
    text-align: center;
    font-size: 25px;
    color: rgb(255, 41, 41);
}
