<body>
    
   <div class="box"> 
    <h3 id="h3">Temperature Converter</h3>
    <form class="form">
        <input type="number" class="textbox" id="txt"><br>

        <input type="radio" id="tofare" name="degree">
        <label for="tofare">Celsius ➡️ Farenheit</label><br>

        <input type="radio" id="tocel" name="degree">
        <label for="tocel">Farenheit ➡️ Celsius</label><br>

        <button type="submit" id="convert">Convert</button>

        <p id="value"></p>
    </form>
   </div> 

    <script>
        const degree = document.querySelector(`.textbox`);
const faren = document.getElementById(`tofare`);
const cel = document.getElementById(`tocel`);
const btn = document.getElementById(`convert`);
const res = document.getElementById(`value`);
let temp;

function convert() {
    let fare;
    let cels;
    if(degree.value == ""){
        res.textContent = `Enter a value!!`;
    }
    
    else if(faren.checked){
        temp = Number(degree.value);
        fare = ((9/5) * temp) + 32;
        res.textContent = `${fare} °F`;
    }
    else if(cel.checked){
        temp = Number(degree.value);
        cels = (temp - 32) * (5/9);
        res.textContent = `${cels.toFixed(2)} °C`;
    }
    else{
        res.textContent = `Select a unit!!`;
    }
    degree.value = "";
}

btn.onclick = function(event) {
    event.preventDefault();
    convert();
}
    </script>
</body>
